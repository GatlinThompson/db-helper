generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public"]
}


model profiles {
  id         BigInt @id @default(autoincrement())
  user_id    String @unique @db.Uuid
  first_name String
  last_name  String
  role       Role   @default(employee)
  user_email String @unique

  @@schema("public")
}


enum Role {
  employee
  manager
  trainer
  admin

  @@schema("public")
}
